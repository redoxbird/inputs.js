{
  "name": "inputs.js",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Khizar Hasan <khizar@redoxbird.com>",
  "description": "Collection of accessible inputs.",
  "homepage": "https://inputsjs.redoxbird.com",
  "keywords": [
    "web-components",
    "lit",
    "inputs",
    "form",
    "accessibility",
    "wcag",
    "validation"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redoxbird/inputs.js.git"
  },
  "bugs": {
    "url": "https://github.com/inputsjs/inputs/issues"
  },
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:watch": "esbuild package/index.js --bundle --outfile=dist/index.js --sourcemap --target=es2017 --watch",
    "dev:serve": "serve -s ./",
    "build": "esbuild package/index.js --bundle --outfile=dist/index.js --minify --sourcemap --target=es2017",
    "build:all": "npm run build",
    "watch": "esbuild package/index.js --bundle --outfile=dist/index.js --sourcemap --target=es2017 --watch",
    "prepublishOnly": "npm run build:all",
    "lint": "eslint package/",
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "esbuild": "0.27.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "serve": "^14.2.5"
  },
  "dependencies": {
    "lit": "^3.3.1"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "sideEffects": false
}
